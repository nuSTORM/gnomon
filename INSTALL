export NCORES=5

cd env
mkdir src
cd src
find Python-3.1.4.tgz and place here
tar xvfz Python-3.1.4.tgz
./configure --enable-shared --prefix=/Users/tunnell/env/build
make -j${NCORES}
make install

cd ~/env

virtualenv --python=/Users/tunnell/env/build/bin/python3 gnomon
cd gnomon
source bin/activate
cd lib
ln -s /Users/tunnell/env/build/lib/libpython3.1.dylib libpython3.1.dylib
cd ..
mkdir src
cd src
get root patches svn
cd root_v5.32.00-patches/
./configure --with-python-libdir=$VIRTUAL_ENV/lib/
make -j${NCORES}

add:
source $VIRTUAL_ENV/src/root_v5.32.00-patches/bin/thisroot.sh
to bin/activate end.

mkdir ${VIRTUAL_ENV}/src

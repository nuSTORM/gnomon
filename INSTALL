We use phyton 3.2

# Mac
sudo port install boost +python32
sudo port install python3.2

# Dev
#easy_install -U Sphinx





virtualenv --python=python3.2 gnomon_env
cd gnomon_env
export GNOMONDIR=`pwd`

cd $GNOMONDIR/bin/
ln -s /usr/bin/gcc-mp-4.7 gcc
ln -s /usr/bin/g++-mp-4.7 g++
ln -s /usr/bin/cpp-mp-4.7 cpp
ln -s /usr/bin/gcov-mp-4.7 gcov
ln -s /usr/bin/gfortran-mp-4.7 gfortran

cd $GNOMONDIR


emacs bin/activate

add to end:

export DYLD_LIBRARY_PATH=$VIRTUAL_ENV/lib:$LD_LIBRARY_PATH

(ld for linux)_


mkdir $VIRTUAL_ENV/src/

get

tar xvfz root_v5.32.00.source.tar.gz 

mv root root_v5.32.00

cd root_v5.32.00

./configure --with-python-incdir=$VIRTUAL_ENV/include/python3.2m/ --with-python-incdir=$VIRTUAL_ENV/lib/
export NCORES=5
make -j$NCORES

OR:
cd src
svn co http://root.cern.ch/svn/root/branches/v5-32-00-patches root_v5.32.00-patches

mkdir $VIRTUAL_ENV/build/root_v5.32.00-patches
cd $VIRTUAL_ENV/build/root_v5.32.00-patches
cmake $VIRTUAL_ENV/src/root_v5.32.00-patches


